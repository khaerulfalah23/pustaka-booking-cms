generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  address      String?
  email        String   @unique
  password     String
  image        String?  @default("default.svg")
  role         Role     @default(user)
  is_active    IsActive @default(nonactive)
  date_created DateTime @default(now())
}

enum Role {
  user
  admin
}

enum IsActive {
  active
  nonactive
}

model Category {
  id       String @id @default(cuid())
  category String
}
